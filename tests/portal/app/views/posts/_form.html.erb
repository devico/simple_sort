<%= simple_form_for @post do |f| %>
  <div class="form-group">
    <%= f.input :title, as: :text, label: 'Заголовок', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :body,  as: :text, label: 'Текст статьи', class: 'form-control' %>
  </div>

  <%= f.button :submit, 'Создать', class: 'btn btn-default' %>
<% end %>
